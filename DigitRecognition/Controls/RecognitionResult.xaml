<UserControl x:Class="DigitRecognition.Controls.RecognitionResult"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DigitRecognition.Controls"
             mc:Ignorable="d" 
             x:Name="root"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel
            Orientation="Horizontal">
            <Label 
                Content="{Binding Number, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged,ElementName=root}"></Label>
            <ProgressBar Minimum="0" Maximum="100" Width="100"></ProgressBar>
            <Label Content="Procent Wyniku"></Label>
            <Label Content="%"></Label>
        </StackPanel>
    </Grid>
</UserControl>
